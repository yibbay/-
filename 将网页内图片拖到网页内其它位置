<body>
<section>
    <div class="left" data-acceptable="true">
        <img id="imgId1" src="test.png" data-draggable="true" draggable=true>
        <img id="imgId2" src="test.png" draggable=true>
        <img id="imgId3" src="test.png" data-draggable="true" draggable=true>
    </div>
    <div class="right" data-acceptable="true">

    </div>
</section>
<script>


    document.ondragstart = function (e) {
        var target = e.target;
        var draggable = target.getAttribute("data-draggable");
        if (draggable) {
            e.dataTransfer.setData("id", target.id);
        }
    };
    document.ondragover = function (e) {
        e.preventDefault();
    };
    document.ondrop = function (e) {
        var target = e.target;
        var acceptable = target.getAttribute("data-acceptable");
        if (acceptable) {
            e.preventDefault();
            var imgId = e.dataTransfer.getData("id");
            target.appendChild(document.getElementById(imgId));
        }
    }
</script>
</body>
